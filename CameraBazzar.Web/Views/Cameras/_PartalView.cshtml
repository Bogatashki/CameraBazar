@model CameraBazar.Models.Models.Camera


<div class="container">
    <div class="row border border-dark w-75 p-3row no-gutters  ">

        <div class="col-sm-3">
            <img class="card-image-top img-fluid img-thumbnail" src="@Url.Content(Model.ImageUrl)" alt="Image" />
        </div>
        <div class="col-sm-9 row no-gutters">
            <div class="col-sm-12 row no-gutters">
                <div class="float-left col-sm-6 row no-gutters">
                    @Html.DisplayFor(model => model.Make)
                    @Html.DisplayFor(model => model.Model)
                </div>
                <div class="float-right col-sm-6 row no-gutters text-right">
                    <span class="float-left col-sm-6 row no-gutters">
                        $@Html.DisplayFor(model => model.Price)

                    </span>
                    <span class="float-right col-sm-6 row no-gutters">
                        @if (User.Identity.Name == Model.ApplicationUser.UserName)
                        {
                            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class= "btn btn-primary d-table" })

                        }
                    </span>
                </div>
            </div>
            <div class="d-block col-sm-12 row no-gutters">
                <div class="float-left col-sm-6 p-blank">
                    @Html.ActionLink("Details", "Details", new { id = Model.Id })
                </div>
                <div class="float-right col-sm-6 row no-gutters text-right">
                    @if (Model.Quantity == 0)
                    {
                        <span class="text-left col-sm-6 row no-gutters text-danger">
                            @Html.DisplayName("OUT OF STOCK")
                        </span>
                    }
                    else
                    {
                        <span class="text-left col-sm-6 row no-gutters text-primary">
                            @Html.DisplayName("IN STOCK")
                        </span>
                    }
                    <span class="float-right col-sm-6 row no-gutters">
                        @if (User.Identity.Name == Model.ApplicationUser.UserName)
                        {
                            @Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { @class = "btn bg-warning d-table" })
                        }
                    </span>
                </div>
            </div>

        </div>
    </div>
</div>